# Configuration Brevo (ex-Sendinblue) pour emails transactionnels
BREVO_API_KEY=your_brevo_api_key_here
BREVO_SMTP_USER=your_brevo_smtp_login_here
BREVO_SMTP_PASSWORD=your_brevo_smtp_password_here

# Configuration Mailer avec Brevo SMTP
MAILER_DSN=smtp://your_brevo_smtp_login:your_brevo_smtp_password@smtp-relay.brevo.com:587

# Configuration application
APP_NAME="OrthoSmart"
APP_EMAIL_FROM="noreply@orthosmart.fr"
APP_EMAIL_SUPPORT="support@orthosmart.fr"

# Configuration Messenger pour notifications asynchrones
# Par défaut utilise Doctrine (base de données) comme transport
# Pour RabbitMQ : amqp://guest:guest@localhost:5672/%2f/messages
# Pour Redis : redis://localhost:6379/messages
MESSENGER_TRANSPORT_DSN=doctrine://default?queue_name=async
