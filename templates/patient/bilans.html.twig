{% extends 'patient/base.html.twig' %}

{% block title %}Mes Bilans - Espace Patient{% endblock %}

{% block patient_content %}
<div class="space-y-6">
    <!-- En-tête -->
    <div class="md:flex md:items-center md:justify-between">
        <div class="flex-1 min-w-0">
            <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
                Mes bilans
            </h2>
            <p class="mt-1 text-sm text-gray-500">
                Résultats de vos tests orthophoniques
            </p>
        </div>
    </div>

    {% if bilans|length > 0 %}
        <!-- Liste des bilans -->
        <div class="bg-white shadow overflow-hidden sm:rounded-md">
            <ul class="divide-y divide-gray-200">
                {% for bilan in bilans %}
                <li>
                    <div class="px-4 py-4 sm:px-6">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center">
                                <div class="flex-shrink-0 h-12 w-12">
                                    <div class="h-12 w-12 rounded-full 
                                        {% if bilan.niveauRisqueGlobal == 'faible' %}bg-green-100
                                        {% elseif bilan.niveauRisqueGlobal == 'modere' %}bg-yellow-100
                                        {% elseif bilan.niveauRisqueGlobal == 'haut' %}bg-orange-100
                                        {% else %}bg-red-100{% endif %} 
                                        flex items-center justify-center">
                                        <i class="fas fa-chart-line 
                                            {% if bilan.niveauRisqueGlobal == 'faible' %}text-green-600
                                            {% elseif bilan.niveauRisqueGlobal == 'modere' %}text-yellow-600
                                            {% elseif bilan.niveauRisqueGlobal == 'haut' %}text-orange-600
                                            {% else %}text-red-600{% endif %} text-xl"></i>
                                    </div>
                                </div>
                                <div class="ml-4">
                                    <div class="flex items-center">
                                        <h3 class="text-lg font-medium text-gray-900">
                                            {{ bilan.prescription.test.nom }}
                                        </h3>
                                        <span class="ml-3 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                                            {% if bilan.niveauRisqueGlobal == 'faible' %}bg-green-100 text-green-800
                                            {% elseif bilan.niveauRisqueGlobal == 'modere' %}bg-yellow-100 text-yellow-800
                                            {% elseif bilan.niveauRisqueGlobal == 'haut' %}bg-orange-100 text-orange-800
                                            {% else %}bg-red-100 text-red-800{% endif %}">
                                            {{ bilan.nomNiveauRisque }}
                                        </span>
                                    </div>
                                    <div class="mt-1 flex items-center text-sm text-gray-500">
                                        <i class="fas fa-calendar mr-1"></i>
                                        {{ bilan.dateGeneration|date('d/m/Y à H:i') }}
                                        <span class="mx-2">•</span>
                                        <i class="fas fa-trophy mr-1"></i>
                                        Score DG : {{ bilan.scoreDG }}
                                        {% if bilan.version > 1 %}
                                            <span class="mx-2">•</span>
                                            <i class="fas fa-history mr-1"></i>
                                            Version {{ bilan.version }}
                                        {% endif %}
                                    </div>
                                    {% if bilan.ageDeveloppementMois %}
                                        <div class="mt-1 text-sm text-gray-600">
                                            <i class="fas fa-child mr-1"></i>
                                            Âge de développement estimé : {{ bilan.ageDeveloppementFormate }}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="flex flex-col items-end space-y-2">
                                <!-- Statut du bilan -->
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                    {% if bilan.isFinalise %}bg-green-100 text-green-800
                                    {% elseif bilan.isValide %}bg-blue-100 text-blue-800
                                    {% elseif bilan.isEnRevision %}bg-yellow-100 text-yellow-800
                                    {% else %}bg-gray-100 text-gray-800{% endif %}">
                                    {% if bilan.isFinalise %}
                                        <i class="fas fa-lock mr-1"></i>Finalisé
                                    {% elseif bilan.isValide %}
                                        <i class="fas fa-check mr-1"></i>Validé
                                    {% elseif bilan.isEnRevision %}
                                        <i class="fas fa-edit mr-1"></i>En révision
                                    {% else %}
                                        <i class="fas fa-clock mr-1"></i>En attente
                                    {% endif %}
                                </span>

                                <!-- Actions -->
                                {% if bilan.isValide or bilan.isFinalise %}
                                    <a href="{{ path('patient_bilan_view', {id: bilan.id}) }}" 
                                       class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                        <i class="fas fa-eye mr-2"></i>
                                        Consulter
                                    </a>
                                {% else %}
                                    <span class="inline-flex items-center px-3 py-2 text-sm leading-4 font-medium text-gray-500">
                                        <i class="fas fa-clock mr-2"></i>
                                        En attente de validation
                                    </span>
                                {% endif %}
                            </div>
                        </div>

                        <!-- Aperçu des résultats -->
                        {% if bilan.isValide or bilan.isFinalise %}
                            <div class="mt-4 pt-4 border-t border-gray-200">
                                <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                                    <!-- Points forts -->
                                    {% set pointsForts = bilan.pointsForts %}
                                    {% if pointsForts|length > 0 %}
                                        <div class="bg-green-50 rounded-lg p-3">
                                            <div class="flex items-center mb-2">
                                                <i class="fas fa-thumbs-up text-green-600 mr-2"></i>
                                                <h4 class="text-sm font-medium text-green-800">Points forts</h4>
                                            </div>
                                            <ul class="text-xs text-green-700 space-y-1">
                                                {% for point in pointsForts|slice(0, 2) %}
                                                    <li>• {{ point.description|slice(0, 50) }}{% if point.description|length > 50 %}...{% endif %}</li>
                                                {% endfor %}
                                                {% if pointsForts|length > 2 %}
                                                    <li class="text-green-600">• +{{ pointsForts|length - 2 }} autre(s)</li>
                                                {% endif %}
                                            </ul>
                                        </div>
                                    {% endif %}

                                    <!-- Points de vigilance -->
                                    {% set pointsVigilance = bilan.pointsVigilance %}
                                    {% if pointsVigilance|length > 0 %}
                                        <div class="bg-orange-50 rounded-lg p-3">
                                            <div class="flex items-center mb-2">
                                                <i class="fas fa-exclamation-triangle text-orange-600 mr-2"></i>
                                                <h4 class="text-sm font-medium text-orange-800">Points de vigilance</h4>
                                            </div>
                                            <ul class="text-xs text-orange-700 space-y-1">
                                                {% for point in pointsVigilance|slice(0, 2) %}
                                                    <li>• {{ point.description|slice(0, 50) }}{% if point.description|length > 50 %}...{% endif %}</li>
                                                {% endfor %}
                                                {% if pointsVigilance|length > 2 %}
                                                    <li class="text-orange-600">• +{{ pointsVigilance|length - 2 }} autre(s)</li>
                                                {% endif %}
                                            </ul>
                                        </div>
                                    {% endif %}

                                    <!-- Commentaires praticien -->
                                    {% if bilan.commentairesPraticien %}
                                        <div class="bg-blue-50 rounded-lg p-3">
                                            <div class="flex items-center mb-2">
                                                <i class="fas fa-user-md text-blue-600 mr-2"></i>
                                                <h4 class="text-sm font-medium text-blue-800">Commentaires</h4>
                                            </div>
                                            <p class="text-xs text-blue-700">
                                                {{ bilan.commentairesPraticien|slice(0, 100) }}{% if bilan.commentairesPraticien|length > 100 %}...{% endif %}
                                            </p>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </li>
                {% endfor %}
            </ul>
        </div>
    {% else %}
        <!-- Message si aucun bilan -->
        <div class="text-center py-12">
            <div class="mx-auto h-24 w-24 text-gray-400">
                <i class="fas fa-chart-line text-6xl"></i>
            </div>
            <h3 class="mt-4 text-lg font-medium text-gray-900">Aucun bilan disponible</h3>
            <p class="mt-2 text-sm text-gray-500">
                Vos bilans apparaîtront ici une fois que vous aurez terminé vos tests<br>
                et qu'ils auront été validés par votre praticien.
            </p>
            <div class="mt-6">
                <a href="{{ path('patient_tests') }}" 
                   class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-blue-700 bg-blue-100 hover:bg-blue-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    <i class="fas fa-clipboard-list mr-2"></i>
                    Voir mes tests
                </a>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
