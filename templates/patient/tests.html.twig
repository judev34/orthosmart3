{% extends 'patient/base.html.twig' %}

{% block title %}Mes Tests - Espace Patient{% endblock %}

{% block patient_content %}
<div class="space-y-6">
    <!-- En-tête -->
    <div class="md:flex md:items-center md:justify-between">
        <div class="flex-1 min-w-0">
            <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
                Mes tests prescrits
            </h2>
            <p class="mt-1 text-sm text-gray-500">
                Tests prescrits par votre praticien
            </p>
        </div>
    </div>

    {% if prescriptions|length > 0 %}
        <!-- Liste des prescriptions -->
        <div class="bg-white shadow overflow-hidden sm:rounded-md">
            <ul class="divide-y divide-gray-200">
                {% for prescription in prescriptions %}
                <li>
                    <div class="px-4 py-4 sm:px-6">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center">
                                <div class="flex-shrink-0 h-12 w-12">
                                    <div class="h-12 w-12 rounded-full 
                                        {% if prescription.statut == 'active' %}bg-blue-100
                                        {% elseif prescription.statut == 'terminee' %}bg-green-100
                                        {% else %}bg-gray-100{% endif %} 
                                        flex items-center justify-center">
                                        <i class="fas fa-clipboard-list 
                                            {% if prescription.statut == 'active' %}text-blue-600
                                            {% elseif prescription.statut == 'terminee' %}text-green-600
                                            {% else %}text-gray-600{% endif %} text-xl"></i>
                                    </div>
                                </div>
                                <div class="ml-4">
                                    <div class="flex items-center">
                                        <h3 class="text-lg font-medium text-gray-900">
                                            {{ prescription.test.nom }}
                                        </h3>
                                        {% if prescription.priorite == 'haute' %}
                                            <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                                <i class="fas fa-exclamation-triangle mr-1"></i>
                                                Priorité haute
                                            </span>
                                        {% endif %}
                                    </div>
                                    <div class="mt-1 flex items-center text-sm text-gray-500">
                                        <i class="fas fa-calendar mr-1"></i>
                                        Prescrit le {{ prescription.dateCreation|date('d/m/Y à H:i') }}
                                        <span class="mx-2">•</span>
                                        <i class="fas fa-user-md mr-1"></i>
                                        Dr. {{ prescription.praticien.email }}
                                    </div>
                                    {% if prescription.instructions %}
                                        <div class="mt-2 text-sm text-gray-600">
                                            <i class="fas fa-info-circle mr-1"></i>
                                            {{ prescription.instructions }}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="flex flex-col items-end space-y-2">
                                <!-- Statut -->
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                    {% if prescription.statut == 'active' %}bg-blue-100 text-blue-800
                                    {% elseif prescription.statut == 'terminee' %}bg-green-100 text-green-800
                                    {% elseif prescription.statut == 'suspendue' %}bg-yellow-100 text-yellow-800
                                    {% else %}bg-gray-100 text-gray-800{% endif %}">
                                    {% if prescription.statut == 'active' %}
                                        <i class="fas fa-play mr-1"></i>Active
                                    {% elseif prescription.statut == 'terminee' %}
                                        <i class="fas fa-check mr-1"></i>Terminée
                                    {% elseif prescription.statut == 'suspendue' %}
                                        <i class="fas fa-pause mr-1"></i>Suspendue
                                    {% else %}
                                        <i class="fas fa-clock mr-1"></i>{{ prescription.statut|title }}
                                    {% endif %}
                                </span>

                                <!-- Actions -->
                                {% if prescription.isActive %}
                                    {% if prescription.hasConsentementRGPD %}
                                        <a href="{{ path('patient_test_start', {id: prescription.id}) }}" 
                                           class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                            <i class="fas fa-play mr-2"></i>
                                            Commencer le test
                                        </a>
                                    {% else %}
                                        <a href="{{ path('patient_consent', {id: prescription.id}) }}" 
                                           class="inline-flex items-center px-3 py-2 border border-orange-300 text-sm leading-4 font-medium rounded-md text-orange-700 bg-orange-50 hover:bg-orange-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500">
                                            <i class="fas fa-info-circle mr-2"></i>
                                            Consentement requis
                                        </a>
                                    {% endif %}
                                {% endif %}
                            </div>
                        </div>

                        <!-- Progression si passation en cours -->
                        {% set passation = prescription.dernierePassation %}
                        {% if passation and not passation.isTerminee and not passation.isAbandonee %}
                            <div class="mt-4 pt-4 border-t border-gray-200">
                                <div class="flex items-center justify-between text-sm text-gray-600 mb-2">
                                    <span>Progression du test</span>
                                    <span>{{ passation.progression }}%</span>
                                </div>
                                <div class="w-full bg-gray-200 rounded-full h-2">
                                    <div class="bg-blue-600 h-2 rounded-full" style="width: {{ passation.progression }}%"></div>
                                </div>
                                <div class="mt-2 flex items-center justify-between">
                                    <div class="flex items-center text-sm text-gray-500">
                                        {% if passation.isSuspendue %}
                                            <i class="fas fa-pause text-yellow-500 mr-1"></i>
                                            Test suspendu
                                        {% else %}
                                            <i class="fas fa-play text-green-500 mr-1"></i>
                                            Test en cours
                                        {% endif %}
                                        {% if passation.derniereActivite %}
                                            <span class="ml-2">
                                                Dernière activité : {{ passation.derniereActivite|date('d/m/Y à H:i') }}
                                            </span>
                                        {% endif %}
                                    </div>
                                    <a href="{{ path('patient_test_passation', {id: passation.id}) }}" 
                                       class="inline-flex items-center px-2 py-1 border border-transparent text-xs font-medium rounded text-blue-700 bg-blue-100 hover:bg-blue-200">
                                        <i class="fas fa-arrow-right mr-1"></i>
                                        Reprendre
                                    </a>
                                </div>
                            </div>
                        {% endif %}

                        <!-- Bilan disponible -->
                        {% if prescription.bilan and (prescription.bilan.isValide or prescription.bilan.isFinalise) %}
                            <div class="mt-4 pt-4 border-t border-gray-200">
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center text-sm text-green-600">
                                        <i class="fas fa-chart-line mr-2"></i>
                                        <span>Bilan disponible</span>
                                        <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium 
                                            {% if prescription.bilan.niveauRisqueGlobal == 'faible' %}bg-green-100 text-green-800
                                            {% elseif prescription.bilan.niveauRisqueGlobal == 'modere' %}bg-yellow-100 text-yellow-800
                                            {% else %}bg-red-100 text-red-800{% endif %}">
                                            {{ prescription.bilan.nomNiveauRisque }}
                                        </span>
                                    </div>
                                    <a href="{{ path('patient_bilan_view', {id: prescription.bilan.id}) }}" 
                                       class="inline-flex items-center px-3 py-1 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700">
                                        <i class="fas fa-eye mr-2"></i>
                                        Consulter le bilan
                                    </a>
                                </div>
                            </div>
                        {% elseif prescription.bilan %}
                            <div class="mt-4 pt-4 border-t border-gray-200">
                                <div class="flex items-center text-sm text-gray-500">
                                    <i class="fas fa-clock mr-2"></i>
                                    <span>Bilan en cours de validation par votre praticien</span>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </li>
                {% endfor %}
            </ul>
        </div>
    {% else %}
        <!-- Message si aucun test -->
        <div class="text-center py-12">
            <div class="mx-auto h-24 w-24 text-gray-400">
                <i class="fas fa-clipboard-list text-6xl"></i>
            </div>
            <h3 class="mt-4 text-lg font-medium text-gray-900">Aucun test prescrit</h3>
            <p class="mt-2 text-sm text-gray-500">
                Votre praticien n'a pas encore prescrit de test.<br>
                Contactez-le si vous pensez qu'il y a une erreur.
            </p>
            <div class="mt-6">
                <a href="{{ path('patient_dashboard') }}" 
                   class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-blue-700 bg-blue-100 hover:bg-blue-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Retour au tableau de bord
                </a>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
