{% extends 'base.html.twig' %}

{% block body %}
    <div {{ stimulus_controller('sidebar') }}
         data-sidebar-open-value="true"
         class="min-h-screen bg-gray-100">
        
        <!-- Header -->
        <header class="bg-blue-600 shadow-sm fixed w-full top-0 z-50">
            <div class="flex items-center justify-between px-4 py-3">
                <div class="flex items-center">
                    <button {{ stimulus_action('sidebar', 'toggle', 'click') }}
                            class="text-blue-100 hover:text-white focus:outline-none">
                        <i class="fas fa-bars text-xl"></i>
                    </button>
                    <h1 class="ml-4 text-xl font-semibold text-white">Espace Patient</h1>
                </div>
                <div class="flex items-center space-x-4">
                    <button class="text-blue-100 hover:text-white">
                        <i class="fas fa-bell text-xl"></i>
                    </button>
                    <!-- User Dropdown -->
                    <div class="relative" {{ stimulus_controller('dropdown') }}>
                        <button {{ stimulus_action('dropdown', 'toggle', 'click') }}
                                class="flex items-center text-blue-100 hover:text-white focus:outline-none">
                            <i class="fas fa-user-circle text-xl"></i>
                        </button>
                        <!-- Dropdown Menu -->
                        <div {{ stimulus_target('dropdown', 'menu') }}
                             class="absolute right-0 w-48 mt-2 py-2 bg-white rounded-lg shadow-xl hidden">
                            <div class="px-4 py-2 border-b border-gray-100">
                                <p class="text-sm font-medium text-gray-900">{{ app.user.nomComplet }}</p>
                                <p class="text-xs text-gray-500">{{ app.user.email }}</p>
                            </div>
                            <a href="{{ path('patient_change_password') }}" 
                               class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                <i class="fas fa-key mr-2"></i> Changer mot de passe
                            </a>
                            <a href="{{ path('patient_logout') }}" 
                               class="block px-4 py-2 text-sm text-red-600 hover:bg-gray-100">
                                <i class="fas fa-sign-out-alt mr-2"></i> DÃ©connexion
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <!-- Overlay -->
        <div {{ stimulus_target('sidebar', 'overlay') }}
             {{ stimulus_action('sidebar', 'closeOnOverlayClick', 'click') }}
             class="fixed inset-0 bg-gray-900 bg-opacity-50 z-40 hidden"></div>

        <!-- Sidebar -->
        <aside {{ stimulus_target('sidebar', 'sidebar') }}
               class="fixed left-0 top-0 z-40 h-screen w-64 pt-16 bg-white border-r border-gray-200 transition-transform duration-300 ease-in-out">
            <div class="h-full px-3 py-4 overflow-y-auto">
                <ul class="space-y-2">
                    <li>
                        <a href="{{ path('patient_dashboard') }}" 
                           class="w-full flex items-center p-2 text-gray-900 rounded-lg hover:bg-blue-50 {{ app.request.get('_route') == 'patient_dashboard' ? 'bg-blue-50 text-blue-700' : '' }}">
                            <i class="fas fa-home w-6 text-blue-600"></i>
                            <span class="ml-3">Tableau de bord</span>
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('patient_tests') }}"
                           class="w-full flex items-center p-2 text-gray-900 rounded-lg hover:bg-blue-50 {{ app.request.get('_route') starts with 'patient_test' ? 'bg-blue-50 text-blue-700' : '' }}">
                            <i class="fas fa-clipboard-list w-6 text-blue-600"></i>
                            <span class="ml-3">Mes tests</span>
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('patient_bilans') }}"
                           class="w-full flex items-center p-2 text-gray-900 rounded-lg hover:bg-blue-50 {{ app.request.get('_route') starts with 'patient_bilan' ? 'bg-blue-50 text-blue-700' : '' }}">
                            <i class="fas fa-chart-line w-6 text-blue-600"></i>
                            <span class="ml-3">Mes bilans</span>
                        </a>
                    </li>
                </ul>
            </div>
        </aside>

        <!-- Main Content -->
        <main {{ stimulus_target('sidebar', 'content') }}
              class="pt-16 transition-all duration-300 ml-64">
            <div class="p-4">
                <!-- Flash Messages -->
                {% for type, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="mb-4 p-4 rounded-lg {% if type == 'success' %}bg-green-50 text-green-800 border border-green-200{% elseif type == 'error' %}bg-red-50 text-red-800 border border-red-200{% elseif type == 'info' %}bg-blue-50 text-blue-800 border border-blue-200{% else %}bg-yellow-50 text-yellow-800 border border-yellow-200{% endif %}">
                            <div class="flex">
                                <div class="flex-shrink-0">
                                    {% if type == 'success' %}
                                        <i class="fas fa-check-circle"></i>
                                    {% elseif type == 'error' %}
                                        <i class="fas fa-exclamation-circle"></i>
                                    {% elseif type == 'info' %}
                                        <i class="fas fa-info-circle"></i>
                                    {% else %}
                                        <i class="fas fa-exclamation-triangle"></i>
                                    {% endif %}
                                </div>
                                <div class="ml-3">
                                    {{ message }}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endfor %}

                {% block patient_content %}{% endblock %}
            </div>
        </main>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
