{% extends 'dashboard/base.html.twig' %}

{% block title %}Nouveau Patient{% endblock %}

{% block dashboard_content %}
    <div class="mb-6">
        <a href="{{ path('practitioner_patients_index') }}" 
           class="text-blue-500 hover:text-blue-700 flex items-center space-x-2">
            <i class="fas fa-arrow-left"></i>
            <span>Retour Ã  la liste</span>
        </a>
    </div>

    <div class="bg-white shadow-sm rounded-lg p-6">
        <h1 class="text-2xl font-semibold text-gray-800 mb-6">Nouveau Patient</h1>

        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {{ form_row(form.nom) }}
                {{ form_row(form.prenom) }}
                {{ form_row(form.email) }}
            </div>

            <div class="flex justify-end space-x-3 mt-6">
                <a href="{{ path('practitioner_patients_index') }}" 
                   class="bg-gray-200 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-300">
                    Annuler
                </a>
                <button type="submit" 
                        class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">
                    Enregistrer
                </button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
