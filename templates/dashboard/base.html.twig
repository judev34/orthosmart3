{% extends 'base.html.twig' %}

{% block body %}
    <div class="min-h-screen bg-gray-100">
        <!-- Header -->
        <header class="bg-white shadow-sm fixed w-full top-0 z-50">
            <div class="flex items-center justify-between px-4 py-3">
                <div class="flex items-center">
                    <button id="menuToggle" class="text-gray-500 hover:text-gray-600 focus:outline-none">
                        <i class="fas fa-bars text-xl"></i>
                    </button>
                    <h1 class="ml-4 text-xl font-semibold text-gray-800">Dashboard</h1>
                </div>
                <div class="flex items-center space-x-4">
                    <button class="text-gray-500 hover:text-gray-600">
                        <i class="fas fa-bell text-xl"></i>
                    </button>
                    <div class="relative group">
                        <button class="text-gray-500 hover:text-gray-600">
                            <i class="fas fa-user-circle text-xl"></i>
                        </button>
                        <div class="absolute right-0 w-48 mt-2 py-2 bg-white rounded-lg shadow-xl hidden group-hover:block">
                            <a href="{{ path('practitioner_logout') }}" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                <i class="fas fa-sign-out-alt mr-2"></i> DÃ©connexion
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <!-- Overlay pour mobile -->
        <div id="overlay" class="fixed inset-0 bg-gray-900 bg-opacity-50 z-40 hidden md:hidden"></div>

        <!-- Sidebar -->
        <aside id="sidebar" class="fixed left-0 top-0 z-40 h-screen w-64 pt-16 transition-transform bg-white border-r border-gray-200 transform translate-x-0">
            <div class="h-full px-3 py-4 overflow-y-auto">
                <ul class="space-y-2">
                    <li>
                        <a href="{{ path('practitioner_dashboard') }}" 
                           class="w-full flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100 {{ app.request.get('_route') == 'practitioner_dashboard' ? 'bg-gray-100' : '' }}">
                            <i class="fas fa-home w-6"></i>
                            <span class="ml-3">Accueil</span>
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('practitioner_patients_index') }}"
                           class="w-full flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100 {{ app.request.get('_route') starts with 'practitioner_patients_' ? 'bg-gray-100' : '' }}">
                            <i class="fas fa-users w-6"></i>
                            <span class="ml-3">Patients</span>
                        </a>
                    </li>
                </ul>
            </div>
        </aside>

        <!-- Main Content -->
        <main id="mainContent" class="pt-16 transition-all duration-300 ml-64" data-main-content>
            <div class="p-4">
                {% block dashboard_content %}{% endblock %}
            </div>
        </main>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/sidebar.js') }}"></script>
{% endblock %}
