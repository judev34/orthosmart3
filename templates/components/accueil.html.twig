{# templates/components/accueil.html.twig #}
<div>
    <div class="mb-6">
        <h2 class="text-2xl font-semibold text-gray-800">Bienvenue, {{ this.praticien.email }}</h2>
        <p class="text-gray-600 mt-2">Voici un aperçu de votre activité</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
        <!-- Carte Patients -->
        <div class="bg-white rounded-lg shadow-sm p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Total Patients</p>
                    <p class="text-2xl font-semibold text-gray-900 mt-2">{{ this.nombrePatients }}</p>
                </div>
                <div class="bg-blue-100 rounded-full p-3">
                    <i class="fas fa-users text-blue-600 text-xl"></i>
                </div>
            </div>
        </div>

        <!-- Carte Rendez-vous -->
        <div class="bg-white rounded-lg shadow-sm p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Rendez-vous aujourd'hui</p>
                    <p class="text-2xl font-semibold text-gray-900 mt-2">0</p>
                </div>
                <div class="bg-green-100 rounded-full p-3">
                    <i class="fas fa-calendar-check text-green-600 text-xl"></i>
                </div>
            </div>
        </div>

        <!-- Carte Messages -->
        <div class="bg-white rounded-lg shadow-sm p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Nouveaux messages</p>
                    <p class="text-2xl font-semibold text-gray-900 mt-2">0</p>
                </div>
                <div class="bg-purple-100 rounded-full p-3">
                    <i class="fas fa-envelope text-purple-600 text-xl"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Section Activité Récente -->
    <div class="bg-white rounded-lg shadow-sm p-6">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Activité Récente</h3>
        <div class="space-y-4">
            <div class="flex items-center text-gray-600">
                <i class="fas fa-info-circle mr-2 text-blue-500"></i>
                <p>Bienvenue sur votre nouveau tableau de bord !</p>
            </div>
        </div>
    </div>
</div>
