{# templates/components/dashboard.html.twig #}
<div {{ attributes }}>
    <!-- Sidebar -->
    <aside id="sidebar" class="fixed left-0 top-0 z-40 h-screen w-64 pt-16 transition-transform bg-white border-r border-gray-200 transform translate-x-0">
        <div class="h-full px-3 py-4 overflow-y-auto">
            <ul class="space-y-2">
                {% for key, tab in this.availableTabs %}
                    <li>
                        <button 
                            data-action="live#action"
                            data-live-action-param="setActiveTab"
                            data-live-tab-param="{{ key }}"
                            class="w-full flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100 {{ this.activeTab == key ? 'bg-gray-100' : '' }}"
                        >
                            <i class="fas {{ tab.icon }} w-6"></i>
                            <span class="ml-3">{{ tab.name }}</span>
                        </button>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </aside>

    <!-- Main Content -->
    <main id="mainContent" class="pt-16 transition-all duration-300" data-main-content>
        <div class="p-4">
            {% if this.activeTab == 'accueil' %}
                {{ component('accueil') }}
            {% elseif this.activeTab == 'patients' %}
                {{ component('patients') }}
            {% endif %}
        </div>
    </main>
</div>
